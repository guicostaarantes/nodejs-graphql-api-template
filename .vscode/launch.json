{
  // For debug to work correctly, you must npm run debug-build in a terminal.
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/nodemon",
      "program": "${workspaceRoot}/src/app.js",
      "restart": true,
      "protocol": "inspector",
      "stopOnEntry": false,
      "runtimeArgs": [
        "--nolazy"
      ],
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/debug-dist/**/*.js"]
    }
  ]
}